{
  "name": "booking-system",
  "version": "1.0.0",
  "description": "A comprehensive booking system with React frontend and JSON Server backend",
  "type": "module",
  "scripts": {
    "start": "npm-run-all --parallel start:backend start:frontend",
    "start:backend": "json-server --watch db.json --port 3001",
    "start:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:prod": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cd frontend && npm run test:unit",
    "test:e2e": "npm run test:e2e:install && cd frontend && npm run test:e2e",
    "test:e2e:install": "cd frontend && npx playwright install --with-deps chromium",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "eslint *.js server/**/*.js",
    "lint:frontend": "cd frontend && npm run lint",
    "audit": "npm audit --audit-level=moderate",
    "audit:frontend": "cd frontend && npm audit --audit-level=moderate",
    "security-check": "npm run audit && npm run audit:frontend"
  },
  "keywords": ["booking", "json-server", "react", "vitest", "playwright"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "json-server": "^0.17.4",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1"
  }
}
